@model FirmaYonetim.Models.ViewModel
@{
    ViewBag.Title = "Index";
}

<head>
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/plugins/fontawesome-free/css/all.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/Content/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Content/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Content/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/dist/css/adminlte.min.css">
</head>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Aranan Kelime: </h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-6">

                    <!-- Company Card -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Firmalar</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Firma Adı</th>
                                        <th>Oluşturulma Tarihi</th>
                                        <th>İlgili Kişi</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (var company in Model.companyList)
                                        {
                                            <tr id="@company.Id"> 
                                                <td>@company.Name</td>
                                                <td>@company.CreateDateTime</td>
                                                <td>@company.CreatedByUser.Name @company.CreatedByUser.Surname</td>
                                                <td style="width: 15%;">
                                                    <a href="/Company/Detail/@company.Id" class="btn btn-primary">DETAYLAR</a>
                                                    <a href="#" data-toggle="modal" data-target="#modal-sm" class="btn btn-danger btnDelete">SİL</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Firma Adı</th>
                                        <th>Oluşturulma Tarihi</th>
                                        <th>İlgili Kişi</th>
                                        <th>İşlem</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->

                    <!-- Contact Card -->
                    <div class="card card-warning">
                        <div class="card-header">
                            <h3 class="card-title">Kişiler</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="contactsTable" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Isim</th>
                                        <th>Email</th>
                                        <th>GSM</th>
                                        <th>Title</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (var contact in Model.contactList)
                                        {
                                            <tr>
                                                <td>@contact.Name @contact.Surname</td>
                                                <td>@contact.Email</td>
                                                <td>@contact.GSM</td>
                                                <td>@contact.Title</td>
                                                <td><a href="/Contact/Detail/@contact.Id" class="btn btn-primary">Detay</a></td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Isim</th>
                                        <th>Email</th>
                                        <th>GSM</th>
                                        <th>Title</th>
                                        <th>İşlem</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->

                </div>
                <!--/.col (left) -->
                <!-- right column -->
                <div class="col-md-6">

                    <!-- Address Card -->
                    <div class="card card-green">
                        <div class="card-header">
                            <h3 class="card-title">Adresler</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="addressTable" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Isim</th>
                                        <th>İl</th>
                                        <th>İlçe</th>
                                        <th>Email</th>
                                        <th>Phone 1</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var address in Model.addressList)
                                    {
                                        <tr>
                                            <td>@address.Name</td>
                                            <td>@address.Province</td>
                                            <td>@address.District</td>
                                            <td>@address.Email</td>
                                            <td>@address.Phone1</td>
                                            <td><a href="/Address/Detail/@address.Id" class="btn btn-primary">Detay</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->

                    <!-- Activity Card -->
                    <div class="card card-red">
                        <div class="card-header">
                            <h3 class="card-title">Aktiviteler</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="activityTable" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Aktivite Tipi</th>
                                        <th>Firma</th>
                                        <th>Adres</th>
                                        <th>Kişi</th>
                                        <th>Tarih</th>
                                        <th>Durum</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var activity in Model.activityList)
                                    {
                                        <tr>
                                            <td>@activity.ActivityType.Text</td>
                                            <td>@activity.Company.Name</td>
                                            <td>@activity.Address.Name</td>
                                            <td>@activity.Contact.Name @activity.Contact.Surname</td>
                                            <td>@activity.Date</td>
                                            <td>
                                                @switch (activity.Status)
                                                {
                                                    case 0:
                                                        <button class="btn btn-warning">Bekliyor</button>
                                                        break;
                                                    case 1:
                                                        <button class="btn btn-danger">İptal Oldu</button>
                                                        break;
                                                    case 2:
                                                        <button class="btn btn-success">Başarılı</button>
                                                        break;
                                                    case 3:
                                                        <button class="btn btn-primary">Başarısız</button>
                                                        break;
                                                    default:
                                                        break;
                                                }
                                            </td>
                                            <td><a href="/Activity/Detail/@activity.Id" class="btn btn-primary">Detay</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->

                </div>
                <!--/.col (right) -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

<!-- /.modal -->
<!-- jQuery -->
<script src="~/Content/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/Content/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- jquery-validation -->
<script src="~/Content/plugins/jquery-validation/jquery.validate.min.js"></script>
<script src="~/Content/plugins/jquery-validation/additional-methods.min.js"></script>
<!-- AdminLTE App -->
<script src="~/Content/dist/js/adminlte.min.js"></script>
<!-- AdminLTE for demo purposes -->
<script src="~/Content/dist/js/demo.js"></script>

<!-- DataTables  & Plugins -->
<script src="~/Content/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/Content/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
<script src="~/Content/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
<script src="~/Content/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
<script src="~/Content/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
<script src="~/Content/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
<script src="~/Content/plugins/jszip/jszip.min.js"></script>
<script src="~/Content/plugins/pdfmake/pdfmake.min.js"></script>
<script src="~/Content/plugins/pdfmake/vfs_fonts.js"></script>
<script src="~/Content/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
<script src="~/Content/plugins/datatables-buttons/js/buttons.print.min.js"></script>
<script src="~/Content/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
<!-- Page specific script -->
<script>
    $(function () {
        $("#example1").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["excel", "pdf"]
        }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        $("#addressTable").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["excel", "pdf"]
        }).buttons().container().appendTo('#addressTable_wrapper .col-md-6:eq(0)');
        $("#activityTable").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["excel", "pdf"]
        }).buttons().container().appendTo('#activityTable_wrapper .col-md-6:eq(0)');
        $("#contactsTable").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["excel", "pdf"]
        }).buttons().container().appendTo('#contactsTable_wrapper .col-md-6:eq(0)');
    });
</script>

