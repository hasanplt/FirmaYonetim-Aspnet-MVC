<script>
    $(function () {
        $("#example1").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["excel", "pdf"]
        }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        $("#addressTable").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["excel", "pdf"]
        }).buttons().container().appendTo('#addressTable_wrapper .col-md-6:eq(0)');
        $("#activityTable").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["excel", "pdf"]
        }).buttons().container().appendTo('#activityTable_wrapper .col-md-6:eq(0)');
    });
</script>
<script>
    const butons = document.querySelectorAll(".btnDelete");
    Array.from(butons).forEach(buton => {
        buton.addEventListener("click", () => {
            console.log(buton.parentElement.parentElement.id);
            localStorage.setItem("deleteItemId", buton.parentElement.parentElement.id);
        });
    });
    document.querySelector(".btnDeleteConfirm").addEventListener("click", () => {
        window.location.href = "/Address/Delete/" + localStorage.getItem("deleteItemId");
    });
</script>