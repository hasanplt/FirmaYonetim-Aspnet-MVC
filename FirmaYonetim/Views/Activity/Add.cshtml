@model FirmaYonetim.Models.ViewModel
@{
    ViewBag.Title = "Add";
}
<head>
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/dist/css/adminlte.min.css">
    <!-- daterange picker -->
    <link rel="stylesheet" href="~/Content/plugins/daterangepicker/daterangepicker.css">
    <!-- Tempusdominus Bootstrap 4 -->
    <link rel="stylesheet" href="~/Content/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
</head>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Aktivite Ekle</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- jquery validation -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Aktivite Ekleme Formu</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form id="quickForm" method="POST" action="/Activity/Add">
                            <div class="card-body">
                                <div class="row">
                                    <div class="form-group col-3">
                                        <label>Aktivite Türü</label>
                                        <select class="form-control select2" style="width: 100%;" name="activityTypeId">
                                            <option selected="selected" value="">Tür Seçiniz</option>
                                            @foreach (var activityType in Model.activityTypeList)
                                            { 
                                                <option value="@activityType.Id">@activityType.Text</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="form-group col-3">
                                        <label>Firma</label>
                                        <select class="form-control select2 companySelect" style="width: 100%;" name="companyId">
                                            <option selected="selected" value="">Firma Seçiniz</option>
                                            @foreach (var company in Model.companyList)
                                            {
                                                <option value="@company.Id">@company.Name</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="form-group col-3">
                                        <label>Adres</label>
                                        <select class="form-control select2 addressSelect" style="width: 100%;" name="addressId" disabled>
                                            <option selected="selected" class="selectedOption" value="">Adres Seçiniz</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-3">
                                        <label>Kişi</label>
                                        <select class="form-control select2 contactSelect" style="width: 100%;" name="contactId" disabled>
                                            <option selected="selected" value="">Kişi Seçiniz</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-4">
                                        <label for="exampleInputEmail1">Başlık</label>
                                        <input type="text" name="title" class="form-control" id="exampleInputEmail1" placeholder="Başlık giriniz...">
                                    </div>
                                    <div class="form-group col-4">
                                        <label>Tarih</label>
                                        <div class="input-group date" id="reservationdatetime" data-target-input="nearest">
                                            <input type="text" class="form-control datetimepicker-input" name="date" data-target="#reservationdatetime" />
                                            <div class="input-group-append" data-target="#reservationdatetime" data-toggle="datetimepicker">
                                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group col-4">
                                        <label>Durum</label>
                                        <select class="form-control select2" style="width: 100%;" name="status">
                                            <option selected="selected" value="">Durum Seçiniz</option>
                                            <option value="0">Bekliyor </option>
                                            <option value="1">İptal Oldu </option>
                                            <option value="2">Başarılı </option>
                                            <option value="3">Başarısız </option>
                                        </select>
                                    </div>
                                    <div class="form-group col-12">
                                        <label>İçerik</label>
                                        <textarea class="form-control" name="text" rows="3" placeholder="Aktivitenizin içeriğini giriniz ..."></textarea>
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button type="submit" class="btn btn-success" style="float:right;">Ekle</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->
                </div>
                <!--/.col (left) -->
                <!-- right column -->
                <div class="col-md-6">

                </div>
                <!--/.col (right) -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

<!-- jQuery -->
<script src="~/Content/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/Content/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- jquery-validation -->
<script src="~/Content/plugins/jquery-validation/jquery.validate.min.js"></script>
<script src="~/Content/plugins/jquery-validation/additional-methods.min.js"></script>
<!-- InputMask -->
<script src="~/Content/plugins/moment/moment.min.js"></script>
<script src="~/Content/plugins/inputmask/jquery.inputmask.min.js"></script>
<!-- date-range-picker -->
<script src="~/Content/plugins/daterangepicker/daterangepicker.js"></script>
<!-- Tempusdominus Bootstrap 4 -->
<script src="~/Content/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
<!-- AdminLTE App -->
<script src="~/Content/dist/js/adminlte.min.js"></script>
<!-- AdminLTE for demo purposes -->
<script src="~/Content/dist/js/demo.js"></script>

<script src="~/Content/plugins/myJsFile.js"></script>
<!-- Page specific script -->
<script>
    $(function () {

        //Date and time picker
        $('#reservationdatetime').datetimepicker({ icons: { time: 'far fa-clock' } });
        //Timepicker
        $('#timepicker').datetimepicker({
            format: 'LT'
        });

        $('#quickForm').validate({
            rules: {
                activityId: {
                    required: true
                },
                companyId: {
                    required: true
                },
                addressId: {
                    required: true
                },
                contactId: {
                    required: true
                },
                title: {
                    required: true,
                    maxlength: 100
                },
                date: {
                    required: true
                },
                status: {
                    required: true
                },
                text: {
                    required: true
                },
            },
            messages: {
                activityId: {
                    required: "Lütfen bir değer seçiniz..."
                },
                companyId: {
                    required: "Lütfen bir değer seçiniz..."
                },
                addressId: {
                    required: "Lütfen bir değer seçiniz..."
                },
                contactId: {
                    required: "Lütfen bir değer seçiniz..."
                },
                title: {
                    required: "Lütfen bir değer giriniz...",
                    maxlength: "Girdiğiniz başlık 100 karakterden uzun olamaz!.."
                },
                date: {
                    required: "Lütfen bir tarih seçiniz..."
                },
                status: {
                    required: "Lütfen bir değer seçiniz..."
                },
                text: {
                    required: "Lütfen bir değer giriniz..."
                }
            },
            errorElement: 'span',
            errorPlacement: function (error, element) {
                error.addClass('invalid-feedback');
                element.closest('.form-group').append(error);
            },
            highlight: function (element, errorClass, validClass) {
                $(element).addClass('is-invalid');
            },
            unhighlight: function (element, errorClass, validClass) {
                $(element).removeClass('is-invalid');
            }
        });
    });
</script>